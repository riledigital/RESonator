{% extends "layout/default.jinja" %} {% block title %}Index{% endblock %} {%
block head %}
{{ super() }}

{% endblock %} {% block content %}

<h1>Process Job</h1>

<form
  class="needs-validation"
  action=""
  method="post"
  enctype="multipart/form-data"
>
  <div class="container gx-5">
    <div class="row">
      <div class="col">
        <div class="input-group mb-3">
          <label class="input-group-text" for="filelms">LMS Data (CSV):</label>
          <input
            class="form-control"
            accept=".csv"
            type="file"
            name="filelms"
            required
          />
        </div>

        <div class="input-group mb-3">
          <label class="input-group-text" for="fileeval"
            >Qualtrics Evaluations (Excel):</label
          >
          <input
            class="form-control"
            accept=".xlsx"
            type="file"
            name="fileeval"
            required
          />
        </div>
      </div>

      <div class="input-group mb-3">
        <label class="input-group-text" for="filemeta"
          >Job metadata (TOML):</label
        >
        <input
          class="form-control"
          accept=".toml"
          type="file"
          name="filemeta"
          required
        />
      </div>
    </div>
  </div>

  <div class="row">
    <input class="btn btn-primary" type="submit" value="Submit" />
    <input
      class="btn btn-outline-secondary"
      type="name"
      name="reset"
      value="Reset"
    />
  </div>
</form>
{% endblock %}
