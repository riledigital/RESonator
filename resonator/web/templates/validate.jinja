{% extends "layout/default.jinja" %} {% block title %}Validate{% endblock %} {%
block head %}
{{ super() }}

{% endblock %} {% block content %}

<h1>Validate a submission file</h1>
<p class="lead">Check a generated RES XML file against the official RES XML DTD.</p>

<form
  class="needs-validation"
  action=""
  method="post"
  enctype="multipart/form-data"
>
  <div class="container gx-5">
    <div class="row">
      <div class="col">
        <div class="input-group mb-3">
          <label class="input-group-text" for="filelms">RES submission file (XML):</label>
          <input
            class="form-control"
            accept=".xml"
            type="file"
            name="fileresxml"
            required
          />
        </div>
    </div>
  </div>

  <div class="row">
    <input class="btn btn-primary" type="submit" value="Submit" />
    <input
      class="btn btn-outline-secondary"
      type="name"
      name="reset"
      value="Reset"
    />
  </div>
</form>
{% endblock %}
